<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Lab_1.ViewModels"
             x:Class="Lab_1.DaySchedulePage"
             Title="{Binding DayTitle}">

    <ContentPage.BindingContext>
        <local:ScheduleViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalOptions="End">
            <Button Text="Add Item" Command="{Binding AddScheduleItemCommand}" />
            <Button Text="Delete" Clicked="OnDeleteButtonClicked" x:Name="DeleteButton" />
            <Button Text="Import" Clicked="OnImportButtonClicked" />
        </StackLayout>

        <ScrollView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <CollectionView ItemsSource="{Binding FilteredScheduleItems}" 
                            SelectionMode="Single" 
                            SelectionChanged="OnScheduleItemSelected">
                <CollectionView.EmptyView>
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="No items scheduled for this day"
                               FontSize="18"
                               TextColor="Gray"
                               HorizontalOptions="Center" />
                        <Button Text="Add New Item" 
                                Command="{Binding AddScheduleItemCommand}"
                                HorizontalOptions="Center"
                                Margin="0,20,0,0" />
                    </StackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" BorderColor="LightGray" CornerRadius="5">
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <!-- Time -->
                                <StackLayout Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Padding="0,0,10,0">
                                    <Label Text="{Binding StartTime, StringFormat='{0:hh\\:mm}'}" FontSize="16" FontAttributes="Bold" />
                                    <Label Text="{Binding EndTime, StringFormat='{0:hh\\:mm}'}" FontSize="14" TextColor="Gray" />
                                </StackLayout>
                                
                                <!-- Title and Location -->
                                <Label Grid.Row="0" Grid.Column="1" Text="{Binding Title}" FontSize="18" FontAttributes="Bold" />
                                <Label Grid.Row="1" Grid.Column="1" Text="{Binding Location}" FontSize="14" TextColor="Gray" />
                                
                                <!-- Description Preview -->
                                <Label Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" 
                                       Text="â€º" 
                                       FontSize="24" 
                                       VerticalOptions="Center"
                                       HorizontalOptions="End" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>